{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "@typescript-eslint/semi": ["error", "always"],
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "import/prefer-default-export": "off",
        "react/react-in-jsx-scope": "off",
        "multiline-ternary": "off"
    }
}
